<%
    slapd_urls = []

    slapd_urls << 'ldap:///' if @listen_ldap
    slapd_urls << 'ldapi:///' if @listen_ldapi
    slapd_urls << 'ldaps:///' if @listen_ldaps
-%>
<% if !slapd_urls.empty? then -%>
SLAPD_URLS="<%=slapd_urls.join(' ')%>"
<% end -%>
<% if !@custom_options.empty? then -%>
SLAPD_OPTIONS="<%= @custom_options.join(' ')%>"
<% end -%>
